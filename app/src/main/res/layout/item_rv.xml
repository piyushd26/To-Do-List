<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView

        android:id="@+id/imageview_"
        android:layout_width="73dp"
        android:layout_height="101dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/back_darkgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:fontFamily="@font/pantondemo_black"
        android:gravity="center"
        android:text="26"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_"
        app:layout_constraintEnd_toEndOf="@+id/imageview_"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/imageview_"
        app:layout_constraintTop_toTopOf="@+id/imageview_"
        app:layout_constraintVertical_bias="0.304" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/pantondemo_black"
        android:gravity="center"
        android:text="sat"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_"
        app:layout_constraintEnd_toEndOf="@+id/imageview_"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/imageview_"
        app:layout_constraintTop_toBottomOf="@+id/date" />



</androidx.constraintlayout.widget.ConstraintLayout>
